public class Day8LargestOfThree {
    public static void main(String[] args) {
        int a = 15, b = 30, c = 22;
        int max = a;

        if (b > max) {
            max = b;
        }
        if (c > max) {
            max = c;
        }

        System.out.println("Largest number is: " + max);
    }
}
